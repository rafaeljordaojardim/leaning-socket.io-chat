{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist",
    // "sourceMap": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "isolatedModules": false,
    "lib": [
      "es6",
      "es2015",
      "dom"
    ],
    "types": [
      "node"
    ],
    "typeRoots": [
      "./node_modules/@types",
    ]
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "node_modules"
  ]
}