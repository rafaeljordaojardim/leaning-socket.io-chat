<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>Simple chat</title>
  <link rel="stylesheet" href="style.css">
</head>

<body>
  <container>
    <section id="nick_name_section">
      <label for="nick_name">Name:</label>
      <input type="text" id="nick_name">
      <button id="change_nick_name">Change nick name</button>
    </section>

    <section>
      <textarea id="messages" name="story" rows="30" cols="100">
      </textarea>
    </section>

    <section id="input_message">
      <input type="text" id="send_message">
      <button id="send">Send</button>
    </section>
    <div class="clear"></div>
  </container>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.0.4/socket.io.js"></script>
  <script src="chat.js"></script>
</body>

</html>